{
  "name": "hapi-ts-api",
  "version": "1.0.0",
  "description": "Hapi TS API Server",
  "main": "server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "npm run build && npm run watch-debug",
    "build": "npm run build-ts && npm run lint",
    "build-ts": "tsc",
    "test": "jest --forceExit --coverage --verbose",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "node-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Hapi\" -c \"yellow.bold,cyan.bold,green.bold\"  \"npm run watch-ts\" \"npm run node-debug\"",
    "watch-ts": "tsc -w",
    "codegen": "graphql-codegen --config codegen.yml",
    "setup-testdb": "db-migrate db:create test",
    "migrations": "db-migrate up -e dev && db-migrate up -e dev-test",
    "graphql-codegen": "graphql-codegen",
    "prisma-generate": "prisma generate",
    "prisma-introspect": "prisma introspect"
  },
  "keywords": [
    "hapi",
    "typescript",
    "graphql",
    "apollo",
    "prisma"
  ],
  "author": "IA",
  "license": "UNLICENSED",
  "dependencies": {
    "@hapi/bell": "^12.1.0",
    "@hapi/boom": "^9.1.0",
    "@hapi/hapi": "^19.1.1",
    "@hapi/joi": "^17.1.1",
    "@prisma/client": "^2.2.0",
    "apollo-server-hapi": "^2.15.1",
    "db-migrate": "^0.11.11",
    "db-migrate-pg": "^1.2.2",
    "dotenv": "^8.2.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.16.3",
    "@graphql-codegen/introspection": "1.16.3",
    "@graphql-codegen/typescript": "1.16.3",
    "@graphql-codegen/typescript-resolvers": "1.16.3",
    "@prisma/cli": "^2.2.0",
    "@types/db-migrate-base": "0.0.8",
    "@types/db-migrate-pg": "0.0.8",
    "@types/eslint": "^7.2.0",
    "@types/hapi__boom": "^9.0.1",
    "@types/hapi__hapi": "^19.0.3",
    "@types/hapi__joi": "^17.1.3",
    "@types/jest": "^26.0.3",
    "@types/node": "^14.0.14",
    "@typescript-eslint/eslint-plugin": "^3.6.0",
    "@typescript-eslint/parser": "^3.6.0",
    "concurrently": "^5.2.0",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "jest": "^26.1.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.1",
    "typescript": "^3.9.6"
  }
}
